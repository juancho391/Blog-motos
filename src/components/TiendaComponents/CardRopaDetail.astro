---
const backIcon = "../../../public/images/backIcon.svg";
interface Props {
  title: string;
  hrefIMG: string;
  description: string;
  precio: string;
}

const { hrefIMG, precio, description, title } = Astro.props;
---

<div class="flex flex-col xl:flex-row xl:h-full p-14 justify-between">
  <div class="left-0 z-20 w-8 absolute top-0 mt-2 ml-1">
    <a href="/TiendaRopa">
      <img src={backIcon} alt="" class="relative hover:bg-white rounded-md" />
    </a>
  </div>
  <div class="m-auto xl:m-0">
    <img src={hrefIMG} alt="" class="object-contain h-full" />
  </div>
  <div class="mt-4 xl:max-w-[700px] xl:mt-0 m-auto lg:ml-10 text-sm md:text-lg">
    <h3 class="text-center text-2xl">{title}</h3>
    <p class="my-6 lg:my-12">{precio}</p>
    <p>{description}</p>
    <div class="flex flex-wrap gap-3 lg:gap-6 mt-16">
      <p>Tallas</p>
      <ul class="flex flex-grow gap-1 lg:gap-4">
        <li class="bg-fondo text-center p-2 lg:p-3 lg:w-14 w-10 rounded-xl">
          S
        </li>
        <li class="bg-fondo text-center p-2 lg:p-3 lg:w-14 w-10 rounded-xl">
          M
        </li>
        <li class="bg-fondo text-center p-2 lg:p-3 lg:w-14 w-10 rounded-xl">
          L
        </li>
        <li class="bg-fondo text-center p-2 lg:p-3 lg:w-14 w-10 rounded-xl">
          XL
        </li>
      </ul>
      <button
        class="bg-[#0B16F0] hover:bg-[#5258d0] px-6 p-2 m-auto rounded-3xl text-white"
        >COMPRAR</button
      >
    </div>
  </div>
</div>
